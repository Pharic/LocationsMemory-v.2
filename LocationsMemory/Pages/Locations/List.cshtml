@page
@model LocationsMemory.Pages.Locations.ListModel
@{
    ViewData["Title"] = "Locations";
}
<head>
    <link href="~/fontawesome-free-5.10.1-web/css/all.css" rel="stylesheet"> <!--load all styles -->
</head>
<h1>Locations</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </span> 
        </div>
    </div>
</form>

<table class="table">
    @foreach(var location in Model.Locations)
    {
        <tr>
            <td>@location.Name</td>
            <td>@location.Street_name</td>
            <td>@location.City</td>
            <td>
                <a class="btn btn-lg" asp-page="./Detail" asp-route-locationId="@location.Id">
                    <i class="fas fa-search-plus"></i>
                </a>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-locationId="@location.Id">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="btn btn-lg" asp-page="./Delete" asp-route-locationId="@location.Id">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
    }
</table>

<a asp-page="./Edit" class="btn btn-primary">Neue Location hinzufügen</a>