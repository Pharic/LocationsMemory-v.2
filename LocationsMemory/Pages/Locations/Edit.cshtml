@page "{locationId:int?}"
@model LocationsMemory.Pages.Locations.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>@Model.Location.Name bearbeiten</h2>

<form method="post">

    <input type="hidden" asp-for="Location.Id" />
    <div class="form-group">
        <label asp-for="Location.Name"></label>
        <input asp-for="Location.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Location.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location.Street_number"></label>
        <input asp-for="Location.Street_number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location.Street_name"></label>
        <input asp-for="Location.Street_name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location.City"></label>
        <input asp-for="Location.City" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

